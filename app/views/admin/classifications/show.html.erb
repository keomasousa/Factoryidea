<%- model_class = Classification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @classification.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admin_classifications_path, :class => 'btn btn-default pull-right'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
             edit_admin_classification_path(@classification), :class => 'btn btn-default pull-right' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_classification_path(@classification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger pull-right' %>
