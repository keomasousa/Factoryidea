<%- model_class = Classification -%>
<div class="page-header">
  <%= link_to t('.new', :default => t("helpers.links.new")), new_admin_classification_path, :class => 'btn btn-primary pull-right' %>
        <li><a href=""><%= current_user.email -%></a> </li>
        <li>
          <%= link_to destroy_user_session_path, :method => Devise.sign_out_via do %>
              <i class="fa fa-power-off"></i> Sair
          <% end %>
          </li>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= paginate @classifications %>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @classifications.each do |classification| %>
      <tr>
        <td><%= link_to classification.id, admin_classification_path(classification) %></td>
        <td><%= classification.name %></td>
        <td><%=l classification.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_classification_path(classification), :class => 'btn btn-default btn-xs pull-left' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_classification_path(classification),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger pull-left' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @classifications %>


